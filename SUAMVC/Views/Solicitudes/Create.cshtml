@model SUADATOS.Solicitud
@using SUADATOS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Usuario usuario = Session["UsuarioData"] as Usuario;
    suaEntities db = new suaEntities();
}

@section Menu {
    <div>Alta de solicitudes <img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="panel panel-info">
        <div class="panel-heading">
            Capturar Solicitud
        </div>
        <div class="panel-body" style="font-size:10px;">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table style="font-size:10px;margin:0 auto; width:700px">
                    <tr>
                        <td>@Html.Label(@Language.cliente, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.DropDownList("clienteId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.clienteId, "", new { @class = "text-danger" })
                        </td>
                        <td>@Html.Label(@Language.proyecto, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.DropDownList("proyectoId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.proyectoId, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.Label(@Language.residencia, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.plazasDrownListNS(usuario.Id, "plazaId")
                            @Html.ValidationMessageFor(model => model.plazaId, "", new { @class = "text-danger" })
                        </td>
                        <td>@Html.LabelFor(model => model.fechaSolicitud, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.EditorFor(model => model.fechaSolicitud, new { htmlAttributes = new { @class = "form-control myNoDayBeforeDate" } })
                            @Html.ValidationMessageFor(model => model.fechaSolicitud, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.esquemaId, "esquemaId", htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.esquemasDrownList(usuario.Id, "esquemaId")
                            @Html.ValidationMessageFor(model => model.esquemaId, "", new { @class = "text-danger" })
                        </td>

                        <td>@Html.LabelFor(model => model.sdiId, "sdiId", htmlAttributes: new { @class = "control-label col-md-2", id = "sdiIdTxt" })</td>
                        <td>
                            @Html.DropDownList("sdiId", null, htmlAttributes: new { @class = "form-control", id = "sdiId" })
                            @Html.ValidationMessageFor(model => model.sdiId, "", new { @class = "text-danger" })
                        </td>

                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.contratoId, "contratoId", htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.contratosDrownList(usuario.Id, "contratoId")
                            @Html.ValidationMessageFor(model => model.contratoId, "", new { @class = "text-danger" })
                        </td>

                        <td>@Html.LabelFor(model => model.fechaTerminoContrato, htmlAttributes: new { @class = "control-label col-md-2", id="fechaTContratoTxt" })</td>
                        <td>
                            @Html.EditorFor(model => model.fechaTerminoContrato, new { htmlAttributes = new { @class = "myDate", id = "fechaTContrato" } })
                            @Html.ValidationMessageFor(model => model.fechaTerminoContrato, "", new { @class = "text-danger" })
                        </td>

                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.tipoPersonalId, "tipoPersonalId", htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.tipoPersonalDrownList(usuario.Id, "tipoPersonalId", "tipoPersonalId")
                            @Html.ValidationMessageFor(model => model.tipoPersonalId, "", new { @class = "text-danger" })
                        </td>
                        <td>@Html.LabelFor(model => model.fechaInicial, htmlAttributes: new { @class = "control-label col-md-2", id = "fechaInicialTxt" })</td>
                        <td>
                            @Html.EditorFor(model => model.fechaInicial, new { htmlAttributes = new { @class = "myDate", id = "fechaInicial" } })
                            @Html.ValidationMessageFor(model => model.fechaInicial, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.fechaFinal, htmlAttributes: new { @class = "control-label col-md-2", id = "fechaFinalTxt" })</td>
                        <td>
                            @Html.EditorFor(model => model.fechaFinal, new { htmlAttributes = new { @class = "myDate", id = "fechaFinal" } })
                            @Html.ValidationMessageFor(model => model.fechaFinal, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                </table>
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h3 class="panel-title"> Autorizaciones</h3>
                    </div>
                    <div class="panel-body">
                        <table style="font-size:10px;margin:0 auto; width:700px">
                            <tr>
                                <td>@Html.LabelFor(model => model.solicita, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                                <td>
                                    @Html.EditorFor(model => model.solicita, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.solicita, "", new { @class = "text-danger" })
                                </td>
                                <td>@Html.LabelFor(model => model.valida, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                                <td>
                                    @Html.EditorFor(model => model.valida, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.valida, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.autoriza, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                                <td>
                                    @Html.EditorFor(model => model.autoriza, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.autoriza, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.observaciones, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                                <td colspan="3">
                                    @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", rows = 4 })
                                    @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3"></td>
                                <td style="text-align:right;"><input type="submit" value="@Language.agregar" class="btn btn-primary" /></td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Language.regresar, "Index")
</div>
<script>
    $(document).ready(function () {
        //attach with the id od deductions
        $("#esquemaId").bind("change", validateEsquema);
        $("#contratoId").bind("change", validateContrato);
        $("#tipoPersonalId").bind("change", validateTipoPersonal);

    });

    function validateEsquema() {
        var msg = $("#esquemaId :selected").text();
        if (msg != 'SyS') {
            $("#sdiId").hide("slow");
            $('#sdiIdTxt').hide("slow");
        } else {
            $("#sdiId").show();
            $('#sdiIdTxt').show();
        }
    }
    function validateContrato() {
        var msg = $("#contratoId :selected").text();
        if (msg.toLowerCase() != 'determinado') {
            $("#fechaTContrato").hide("slow");
            $('#fechaTContratoTxt').hide("slow");
        } else {
            $("#fechaTContrato").show();
            $('#fechaTContratoTxt').show();
        }
    }
    function validateTipoPersonal() {
        var msg = $("#tipoPersonalId :selected").text();
        if (msg.toLowerCase() != 'costa fuera') {
            $("#fechaInicial").hide("slow");
            $("#fechaFinal").hide("slow");
            $('#fechaInicialTxt').hide("slow");
            $('#fechaFinalTxt').hide("slow");
        } else {
            $("#fechaInicial").show();
            $("#fechaFinal").show();
            $('#fechaInicialTxt').show();
            $('#fechaFinalTxt').show();
        }
    }
</script>