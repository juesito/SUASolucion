@model IEnumerable<SUADATOS.Servicio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Menu {
    <div>Catálogo de Servicios<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}
<p>
    @Html.ActionLink(@Language.agregar + " " + @Language.servicio, "Create", "Servicio", new { @class = "btn btn-success" })
</p>
<table class="table table-striped tableSua">
    <tr>
        <th>
            @Html.DisplayName(@Language.descripcion)
        </th>
        <th>
            @Html.DisplayName(@Language.fechaAlta)
        </th>
        <th>
            @Html.DisplayName(@Language.usuarioAlta)
        </th>
        <th>
            @Html.DisplayName(@Language.edit)
            @Html.DisplayName(@Language.borrar)
        </th><th>
</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
            </td>
            <td>
                <a href="@Url.Action("Edit","Servicios", new { id = item.id })" title="@Language.edit">
                    <img src="~/Content/Images/edit.png" alt="" style="border:none;" class="icon" />
                </a>|
                <a href="@Url.Action("Delete", "Servicios", new { id = item.id })" title="@Language.borrar">
                    <img src="~/Content/Images/delete.png" alt="" style="border:none;" class="icon" />
                </a>
            </td>
        </tr>
    }

</table>
