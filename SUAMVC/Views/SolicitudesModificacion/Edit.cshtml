@model SUADATOS.Solicitud

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

@section Menu {
    <div>@Language.modificar Solicitud<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-info">
        <div class="panel-heading">
            Editar Solicitud Modificación
        </div>
        <div class="panel-body" style="font-size:10px;">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.clienteId)
                @Html.HiddenFor(model => model.proyectoId)
                @Html.HiddenFor(model => model.fechaSolicitud)

                <table style="font-size:10px;margin:0 auto; width:700px">
                    <tr>
                        <td>@Html.Label(@Language.cliente)</td>
                        <td>
                            @Html.Label(Model.Cliente.descripcion)
                        </td>
                        <td>@Html.Label(@Language.proyecto)</td>
                        <td>
                            @Html.Label(Model.Proyecto.descripcion)
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.Label(@Language.plaza)</td>
                        <td>
                            @Html.DropDownList("plazaId")
                            @Html.ValidationMessageFor(model => model.plazaId, "", new { @class = "text-danger" })
                        </td>
                        <td>@Html.LabelFor(model => model.sdiId, "sdiId", htmlAttributes: new { id = "sdiIdTxt" })</td>
                        <td>
                            @Html.DropDownList("sdiId", null, htmlAttributes: new {  id = "sdiId" })
                            @Html.ValidationMessageFor(model => model.sdiId, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                </table>
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h3 class="panel-title"> Autorizaciones</h3>
                    </div>
                    <div class="panel-body">
                        <table style="font-size:10px;margin:0 auto; width:700px">
                            <tr>
                                <td>@Html.LabelFor(model => model.valida)</td>
                                <td>
                                    @Html.Label(Model.valida)
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.autoriza)</td>
                                <td>
                                    @Html.Label(Model.autoriza)
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.observaciones)</td>
                                <td colspan="3">
                                    @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", rows = 4 })
                                    @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3"></td>
                                <td style="text-align:right;"><input type="submit" value="@Language.guardar" class="btn btn-primary" /></td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

        <div>
            @Html.ActionLink(@Language.regresar, "Index")
        </div>
