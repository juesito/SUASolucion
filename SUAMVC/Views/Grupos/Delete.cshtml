@model SUADATOS.Grupos

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

@section Menu {
    <div><img src="~/Content/Images/people-b.png" width="15" height="15" /> Catálogo de Grupos </div>
}

<div class="panel panel-info">
    <div class="panel-heading">
        ¿Desea borrar este registro?
    </div>
    <div class="panel-body" style="font-size:10px;">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName(@Language.claGrupo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.claveGrupo)
            </dd>

            <dt>
                @Html.DisplayName(@Language.nombre)
