@model SUADATOS.Solicitud
@using SUADATOS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Usuario usuario = Session["UsuarioData"] as Usuario;
    suaEntities db = new suaEntities();

    Cliente cliente = db.Clientes.Find(Model.clienteId);
    Proyecto proyecto = db.Proyectos.Find(Model.proyectoId);
}

  
@section Menu {
    <div>Alta de Solicitud Modificación <img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.clienteId)
    @Html.HiddenFor(model => model.proyectoId)
    @Html.HiddenFor(model => model.fechaSolicitud)



    <div class="panel panel-info">
        <div class="panel-heading">
            Capturar Solicitud Modificación
        </div>

        <div class="panel-body" style="font-size:10px; background-color: #fafbfc">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table style="font-size:10px;margin:0 auto; width:700px; ">
                    <tr>
                        <td class="pull-right"> @Html.Label(@Language.cliente, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.Label(cliente.descripcion)
                        </td>
                    </tr>
                    <tr>
                        <td class="pull-right">@Html.Label(@Language.proyecto, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td style="padding-top:8px">
                            @Html.Label(proyecto.descripcion)
                        </td>
                    </tr>


                    <tr>
                        <td class="pull-right">@Html.Label(@Language.plaza, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td style="padding-top:8px">
                            @Html.plazasDrownListNS(usuario.Id, "plazaId")
                            @Html.ValidationMessageFor(model => model.plazaId, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td class="pull-right">@Html.LabelFor(model => model.sdiId, "sdi", htmlAttributes: new { @class = "control-label col-md-2", id = "sdiIdTxt" })</td>
                        <td style="padding-top:8px">
                            @Html.sdiDrownList(usuario.Id, "sdiId", cliente.Id, "width:100px;height:25px", false)
                            @Html.ValidationMessageFor(model => model.sdiId, "", new { @class = "text-danger" })
                        </td>

                    </tr>

                    <tr>
                        <td class="pull-right">@Html.LabelFor(model => model.fechaModificacion, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td style="padding-top:8px">
                            @Html.EditorFor(model => model.fechaModificacion, new { htmlAttributes = new { @class = "myNoDayBeforeDate", id = "fechaSolicitud" } })
                            @Html.ValidationMessageFor(model => model.fechaModificacion, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td class="pull-right">@Html.LabelFor(model => model.valida, "valida", htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td style="padding-top:8px">
                            @Html.Label(Model.valida)
                            @Html.HiddenFor(model => model.valida)
                        </td>
                    </tr>
                    <tr>
                        <td class="pull-right">@Html.LabelFor(model => model.autoriza, "autoriza", htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td style="padding-top:8px">
                            @Html.Label(Model.autoriza)
                            @Html.HiddenFor(model => model.autoriza)
                        </td>
                    </tr>
                    <tr>
                        <td class="pull-right">@Html.LabelFor(model => model.observaciones, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td style="padding-top:8px"
                            colspan="3">
                            @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", rows = 4 })
                            @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3"></td>
                        <td style="text-align:right;"><input type="submit" value="@Language.agregar" class="btn btn-primary" /></td>
                    </tr>
        </table>

                </div>
            </div>
        </div>
  
}

<div>
    @Html.ActionLink(@Language.regresar, "Index")
</div>
