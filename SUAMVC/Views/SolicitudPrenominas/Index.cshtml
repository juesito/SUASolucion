@model IEnumerable<SUADATOS.SolicitudPrenomina>
@using SUADATOS
@using SUAMVC.Models
@using System.Text;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    Usuario usuario = Session["UsuarioData"] as Usuario;
    String msg = TempData["message"] as String;


    var grid = new WebGrid(source: Model, rowsPerPage: 10);
    var tableHtml = string.Empty;
    var sb = new StringBuilder();

    //Creamos una lista de columnas
    var gridColumns = new List<WebGridColumn>();
    //gridColumns.Add(grid.Column(format: @<text><input type="checkbox" name="ids" value="@item.id" /></text>, header: "{}"));
    gridColumns.Add(grid.Column("folioSolicitud", "Folio", format: @<text> @if (@item.folioSolicitud != null)
    {  @item.folioSolicitud }</text>, canSort: true));
    gridColumns.Add(grid.Column("Proyecto.descripcion", Language.proyecto, format: @<text> @if (@item.ProyectoId != null)
    {  @item.Proyecto.descripcion }</text>, canSort: true));
    gridColumns.Add(grid.Column("Plaza.descripcion", Language.plaza, format: @<text> @if (@item.PlazaId != null)
    {  @item.Plaza.descripcion }</text>, canSort: true));
    gridColumns.Add(grid.Column("fechaSolicitud", Language.fechaAlta, @<text><div style='width: 6em'>@item.fechaSolicitud.ToString("dd-MM-yyyy")</div></text>, null, canSort: true));

    gridColumns.Add(grid.Column("fechaInicial", Language.fechaInicio, @<text><div style='width: 6em'>
            @if (@item.fechaInicial != null)
            { @item.fechaInicial.ToString("dd-MM-yyyy")}
        </div></text>, null, canSort: true));
    gridColumns.Add(grid.Column("fechaFinal", Language.fechaFinal, @<text><div style='width: 6em'>
                @if (@item.fechaFinal != null)
                { @item.fechaFinal.ToString("dd-MM-yyyy")}
            </div></text>, null, canSort: true));
    gridColumns.Add(grid.Column("solicita", "Solicitó", format: @<text> @if (@item.solicita != null)
    {  @item.solicita }</text>, canSort: true));
    gridColumns.Add(grid.Column("observaciones", Language.observaciones, format: @<text> @if (@item.observaciones != null)
    {  @item.observaciones }</text>, canSort: true));
    gridColumns.Add(grid.Column("noTrabajadores", "No. Trab.", format: @<text> @if (@item.noTrabajadores != null)
    {  @item.noTrabajadores }</text>, canSort: true));

    if (SecurityUserModel.verificarPermiso("modificar solicitud alta", "Se agrega solicitud para modificar empleados", 6))
    {
        gridColumns.Add(grid.Column(header: "Modificar", format: @<text><a href="@Url.Action("Edit", "Solicitudes", new { id = item.id })"><img src="~/Content/Images/edit.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("eliminar solcitud alta", "Se agrega solicitud para eliminar empleados", 6))
    {
        gridColumns.Add(grid.Column(header: "Eliminar", format: @<text>
            @if (!item.Concepto.descripcion.Trim().Equals("Enviado"))
            {
                <a href="@Url.Action("Delete", "Solicitudes", new { id = item.id })">
                    <img src="~/Content/Images/delete.png" alt="" style="border:none;" class="icon" />
                </a>
            }
        </text>));
    }

    if (SecurityUserModel.verificarPermiso("addEmp-Prenomina", "Aregegar empleados a prenomina", 6))
    {
        gridColumns.Add(grid.Column(header: "Detalle Prenomina", format: @<text><a href="@Url.Action("Index", "DetallePrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/addEmployee.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("Subir Lay Out Personal", "Se agrega solicitud para subir lay out de empleados", 6))
    {
        gridColumns.Add(grid.Column(header: "Layout Alta Personal", format: @<text><a href="@Url.Action("CargarEmpleadosPorExcel", "Empleados", new { id = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout SyS Dias Laborados", 6))
    {
        gridColumns.Add(grid.Column(header: "SyS Días Laborados", format: @<text><a href="@Url.Action("crearExcelSySdiasLaborados", "SolicitudPrenominas", new { solicitudId= item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout SyS Por Ingresos", 6))
    {
        gridColumns.Add(grid.Column(header: "SyS Ingresos", format: @<text><a href="@Url.Action("crearExcelJuridico", "SolicitudPrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));

    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout IAS", 6))
    {
        gridColumns.Add(grid.Column(header: "IAS", format: @<text><a href="@Url.Action("crearExcelNomina", "SolicitudPrenominas", new { solicitudId = ViewBag.solicitudId })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));

    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout IAS Dias Laborados", 6))
    {
        gridColumns.Add(grid.Column(header: "IAS Dias Laborados", format: @<text><a href="@Url.Action("crearExcelTarjetaSantander", "SolicitudPrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));

    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout Finiquito", 6))
    {
        gridColumns.Add(grid.Column(header: "Finiquito", format: @<text><a href="@Url.Action("crearExcelTarjetaSantander", "SolicitudPrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout Aguinaldo", 6))
    {
        gridColumns.Add(grid.Column(header: "Aguinaldo", format: @<text><a href="@Url.Action("crearExcelTarjetaSantander", "SolicitudPrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("layOut-Prenomina", "Bajar Layout Pago Normal Pac", 6))
    {
        gridColumns.Add(grid.Column(header: "Pago Normal Pac", format: @<text><a href="@Url.Action("crearExcelTarjetaSantander", "SolicitudPrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));
    }


    gridColumns.Add(grid.Column(header: "Detalle Empleados", format: @<text><a href="@Url.Action("crearExcelDetalleEmpleados", "SolicitudPrenominas", new { solicitudId = item.id })"><img src="~/Content/Images/xls.png" alt="" style="border:none;" class="icon" /></a></text>));


    if (SecurityUserModel.verificarPermiso("ver trabajadores en solicitud alta", "Se agrega solicitud para ver empleados en solicitud", 6))
    {
        gridColumns.Add(grid.Column(header: "Ver Personal", format: @<text>
            @if (item.noTrabajadores >= 0)
            {
                <a href="@Url.Action("Index", "Empleados", new { id = item.id })">
                    <img src="~/Content/Images/see.png" alt="" style="border:none;" class="icon" />
                </a>
            }
        </text>));
    }
    if (SecurityUserModel.verificarPermiso("enviar correo solicitud alta", "Enviar mail informativo", 6))
    {
        gridColumns.Add(grid.Column(header: "Enviar Solicitud", format: @<text>
            @if (item.noTrabajadores > 0 && !item.Concepto.descripcion.Trim().Equals("Enviado"))
            {
                <a href="@Url.Action("EnviarSolicitud", "Solicitudes", new { id = item.id })">
                    <img src="~/Content/Images/send.png" alt="" style="border:none;" class="icon" />
                </a>
            }
        </text>));
    }

    sb.Append(grid.GetHtml(
columns: grid.Columns(gridColumns.ToArray()),
tableStyle: "table table-striped tableSua"
));

    //tableHtml = sb.ToString().Replace("{}", "<input type='checkbox' id='selectAll' name='slall' />").Trim();
    tableHtml = sb.ToString().Trim();

}

<script language="javascript" type="text/javascript">
    function obtenerProyectos(_clienteId) {
        var procemessage = "<option value='0'> Por favor espere...</option>";
        $("#proyectoId").html(procemessage).show();
        var url = "/Proyectos/ObtenerProyectosPorClienteId/";

        $.ajax({
            url: url,
            data: { clienteId: _clienteId },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>Seleccione su proyecto</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                }
                $("#proyectoId").html(markup).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });

    }
</script>


