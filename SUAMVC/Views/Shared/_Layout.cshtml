@using System.Web.Optimization;
@using SUADATOS;
@{
    Usuario usuario = @Session["UsuarioData"] as Usuario;
}
@using SUAMVC.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SUA Solution</title>

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.11.3/jquery-ui.js"></script>

    @Styles.Render("/Content/Site.css")
    @Styles.Render("/Content/bootstrap.min.css")

    <script type="text/javascript">
        $(function () {
            $(".myDate").datepicker({ dateFormat: 'dd/mm/yyyy' });
        });
    </script>
</head>
<body>
    <div class="header">
        <div class="login-line">
            
            @if (Request.IsAuthenticated)
            {
                <strong> @Html.Encode(User.Identity.Name)</strong>
                @Html.ActionLink("Salir", "Logout", "Usuarios")
            }
            else
            {
                @Html.ActionLink("Registrarse", "Create", "Usuarios")
                <span> | </span>
                @Html.ActionLink("Ingresar", "Index", "Home")
            }
        </div>
        <div class="logo-login-main">
            <div class="logo">
                <img src="~/Content/Images/logo.jpg" alt="" width="80" height="80" style="position:relative" />
                <div class="title">
                    <h1>SIAP</h1>
                    <h3 style="color:#057B35">IMSS 3.0</h3>
                </div>
            </div>
            <div class="login">

            </div>
        </div>
    </div>
    <div class="menu">
        <div class="textMenu">
            @RenderSection("Menu")
        </div>
        <div class="login">
            @if (Request.IsAuthenticated)
            {
                <div class="container-sua">

                    <div class="navbar-header">
                        <div class="btn-group" role="group" aria-label="...">
                            <button type="button" class="btn btn-default">@Html.ActionLink("Home", "Home", "Home")</button>

                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Catálogos
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Plazas", "Index", "Plazas")</li>
                                    <li>@Html.ActionLink("Grupos", "Index", "Grupos")</li>
                                    <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                                    <li>@Html.ActionLink("Movimientos", "Index", "CatalogoMovimientos")</li>
                                    <li>@Html.ActionLink("Parametros", "Index", "Parametros")</li>
                                </ul>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    IMSS
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Patrones", "Index", "Patrones")</li>
                                    <li>@Html.ActionLink("Asegurados", "Index", "Asegurados")</li>
                                    <li>@Html.ActionLink("Acreditados", "Index", "Acreditados")</li>
                                    <li>@Html.ActionLink("Movimientos", "Index", "Movimientos")</li>
                                </ul>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Carga
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Cargar SUA", "GoAcreditados", "Upload")</li>
                                    <li>@Html.ActionLink("Actualizar Patrones", "Index", "Upload")</li>
                                </ul>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Seguridad
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Funciones", "Index", "Funciones")</li>
                                    <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                                    <li>@Html.ActionLink("Modulos", "Index", "Modulos")</li>
                                    <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                                    <li>@Html.ActionLink("Modulos por Rol", "Index", "RoleModulos")</li>
                                    <li>@Html.ActionLink("Funciones por Rol", "Index", "RoleFunciones")</li>
                                    <li>@Html.ActionLink("Topicos Por Usuario", "Index", "TopicosUsuario")</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="footer">
        <footer>
            <p>&copy; @DateTime.Now.Year - SIAP Sistema de Administración de Personal IMSS</p>
        </footer>
    </div>
    @section scripts{
        <script type="text/javascript">
            $(function () {
                $('#myDate').datePicker();
            });
        </script>
    }


</body>
</html>