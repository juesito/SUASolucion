@model IEnumerable<SUADATOS.CuentaEmpleado>
@using SUADATOS
@using SUAMVC.Models
@using System.Text;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    Empleado empleado = ViewBag.empleado as Empleado;

    var grid = new WebGrid(source: Model, rowsPerPage: 10);

    var tableHtml = string.Empty;
    var sb = new StringBuilder();

    //Creamos una lista de columnas
    var gridColumns = new List<WebGridColumn>();
    gridColumns.Add(grid.Column("Empleado.nombreCompleto", "Nombre", null, null, true));
    gridColumns.Add(grid.Column("Banco.descripcion", "Banco", null, null, true));
    gridColumns.Add(grid.Column("cuenta", "Cuenta", null, null, true));
    gridColumns.Add(grid.Column("cuentaClabe", "Cuenta Clabe", null, null, true));
    gridColumns.Add(grid.Column("fechaCreacion", "F.Creacion", null, null, true));
    gridColumns.Add(grid.Column(header: Language.edit, format: @<text>
        <a href="@Url.Action("Edit", "CuentaEmpleados", new { id = item.id })">
            <img src="~/Content/Images/edit.png" alt="" style="border:none;" class="icon" />
        </a></text>));
    gridColumns.Add(grid.Column(header: Language.borrar, format: @<text>
            <a href="@Url.Action("Delete", "CuentaEmpleados", new { id = item.id })">
                <img src="~/Content/Images/delete.png" alt="" style="border:none;" class="icon" />
            </a></text>));

    sb.Append(grid.GetHtml(
columns:
grid.Columns(gridColumns.ToArray()),
tableStyle: "table table-striped tableSua"
));

    tableHtml = sb.ToString().Trim();
}

@section Menu {
    <div>Cuentas Empleados <img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

<div class="marqueeFilter">
    <table style="float:left; margin-top:5px;display:inline-block;">
        <thead>
            <tr style="text-align:left;vertical-align:bottom;">
                <td style="padding-top:15px">
                    @Html.Label("Empleado:")
                </td>
                <td style="padding-left:5px;">
                    @Html.Label(empleado.folioEmpleado)
                </td>
                <td style="padding-left:10px;">@Html.Label(empleado.nombreCompleto)</td>
                <td style="padding-left:30px">
                    <a href="@Url.Action("Create", "CuentaEmpleados", new { empleadoId = empleado.id})">
                        <img src="~/Content/Images/atm.png" alt="" style="border:none;" class="icon" title="@Language.agregar" />
                    </a>
                </td>
            </tr>
        </thead>
    </table>
</div>
@if (!tableHtml.IsEmpty())
{
    <div id="table-container" class="table-container">
        @Html.Raw(tableHtml)
    </div>
}

<div style="display:inline-block;font-size:10px;">
    <a href="@Url.Action("Edit", "Empleados", new { id = empleado.id })">
        <p><img src="~/Content/Images/back.png" alt="" style="border:none;float:left;clear:both; " class="icon" />@Language.regresar</p>
    </a>
</div>
