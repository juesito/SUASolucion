            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt>
                @Html.DisplayName(@Language.nomCorto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombreCorto)
            </dd>

            <dt>
                @Html.DisplayName(@Language.posicion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.posicion)
            </dd>

            <dt>
                @Html.DisplayName(@Language.estatus)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.estatus)
            </dd>

            <dt>
                @Html.DisplayName(@Language.plaza)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Plaza.descripcion)
