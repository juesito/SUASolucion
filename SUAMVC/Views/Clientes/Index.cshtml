@model IEnumerable<SUADATOS.Cliente>
@using System.Text;
@using SUAMVC.Models
@using SUADATOS;

@{
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    Usuario usuario = Session["UsuarioData"] as Usuario;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(source: Model, canPage: false);

    var tableHtml = string.Empty;
    var sb = new StringBuilder();

    //Creamos una lista de columnas
    var gridColumns = new List<WebGridColumn>();
    gridColumns.Add(grid.Column("claveCliente", "Clave Cliente", null, null, true));
    gridColumns.Add(grid.Column("claveSUA", "Clave SUA", null, null, true));
    gridColumns.Add(grid.Column("rfc", "RFC", null, null, true));
    gridColumns.Add(grid.Column("descripcion", "Descripción", null, null, true));
    gridColumns.Add(grid.Column("Plaza.cveCorta", "Plaza", null, null, true));
    gridColumns.Add(grid.Column("Grupos.nombreCorto", "Grupo", null, null, true));
    gridColumns.Add(grid.Column("ejecutivo", "Ejecutivo", @<text><div style='width: 23em'>@item.ejecutivo</div></text>, null, true));
    if (SecurityUserModel.verificarPermiso("Clientes", "Consultar detalle"))
    {
        gridColumns.Add(grid.Column(header: "Detalle", format: @<text><a href="@Url.Action("Details", "Clientes", new { id = item.id })"><img src="~/Content/Images/list.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("Clientes", "Editar cliente"))
    {
        gridColumns.Add(grid.Column(header: "Editar", format: @<text><a href="@Url.Action("Edit", "Clientes", new { id = item.id })"><img src="~/Content/Images/edit.png" alt="" style="border:none;" class="icon" /></a></text>));
    }
    if (SecurityUserModel.verificarPermiso("Clientes", "Eliminar cliente"))
    {
        gridColumns.Add(grid.Column(header: "Eliminar", format: @<text><a href="@Url.Action("Delete", "Clientes", new { id = item.id })"><img src="~/Content/Images/delete.png" alt="" style="border:none;" class="icon" /></a></text>));
    }

    sb.Append(grid.GetHtml(
        columns: grid.Columns(gridColumns.ToArray()),
                        tableStyle: "table table-striped tableSua"
                    ));

    tableHtml = sb.ToString().Trim();

}

@section Menu {
    <div>@Language.catde @Language.cliente <img src="~/Content/Images/boss.png" width="15" height="15" /></div>
}
@using (Html.BeginForm())
{
    <p>
        Plaza: @Html.DropDownList("plazasId", "Seleccione Plaza")

        <input type="submit" value="Consultar" class="btn btn-success" />
    </p>
    if (SecurityUserModel.verificarPermiso("Clientes", "Crear cliente"))
    {
        <p>
            @Html.ActionLink("Crear Cliente", "Create", "Clientes", new { @class = "btn btn-success" })
        </p>
    }
}

@if (!tableHtml.IsEmpty())
{
    @Html.Raw(tableHtml)
}


