@model IEnumerable<SUADATOS.Factore>

@{
    ViewBag.Title = Language.factores;
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    
}
@section Menu {
    <div>@Language.catde @Language.factores<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

<p>
    @Html.ActionLink(@Language.agregar + " " + @Language.factores, "Create", "Factore", new { @class = "btn btn-success" })
</p>
<table class="table table-striped tableSua">
    <tr>
        <th>
            @Html.DisplayName(@Language.anosTrabajados)
        </th>
        <th>
            @Html.DisplayName(@Language.diasVacaciones)
        </th>
        <th>
            @Html.DisplayName(@Language.primaVacacional)
        </th>
        <th>
            @Html.DisplayName(@Language.porcentaje)
        </th>
        <th>
            @Html.DisplayName(@Language.diasAno)
        </th>
        <th>
            @Html.DisplayName(@Language.factorVacaciones)
        </th>
        <th>
            @Html.DisplayName(@Language.aguinaldo)
        </th>
        <th>
            @Html.DisplayName(@Language.diasAnoAguinaldo)
        </th>
        <th>
            @Html.DisplayName(@Language.factor)
        </th>
        <th>
            @Html.DisplayName(@Language.factorIntegracion)
        </th>
        <th>
            @Html.DisplayName(@Language.fechaRegistro)
        </th>
        <th>
            @Html.DisplayName(@Language.usuarioAlta)
        </th>
        <th>
            @Html.DisplayName(Language.edit)
        <th>
            @Html.DisplayName(Language.borrar)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.anosTrabajados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diasVacaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primaVacacional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.porcentaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diasAno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.factorVacaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aguinaldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diasAnoAguinaldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.factor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.factorIntegracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
            </td>
            <td>
                <a href="@Url.Action("Edit","Factores", new { id = item.id })" title="@Language.edit">
                    <img src="~/Content/Images/edit.png" alt="" style="border:none;" class="icon" />
                </a>|
                <a href="@Url.Action("Delete", "Factores", new { id = item.id })" title="@Language.borrar">
                    <img src="~/Content/Images/delete.png" alt="" style="border:none;" class="icon" />
                </a>
            </td>
        </tr>
    }

</table>
