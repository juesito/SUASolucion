@model SUADATOS.Pago
@using SUADATOS
@using System.Text;

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    var message = @TempData["viewMessage"];
    var isError = TempData["error"];
    Usuario usuario = Session["UsuarioData"] as Usuario;
}

@section Menu {
    <div>Datos adicionales para IDSE <img src="~/Content/Images/home.png" width="15" height="15" /></div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Captura
    </div>
    <div class="panel-body">
        @using (@Html.BeginForm("IDSE", "PanelSolicitudes", FormMethod.Get))
        {
            @Html.Hidden("usuarioId", usuario.Id)
            <div class="marqueeFilter">
                <table style="float:left; margin-top:10px;display:inline-block;">
                    <tbody>
                        <tr>
                            <td style="padding-top:10px">
                            <td>@Html.Label("trabajador", "Tipo de trabajador:")</td>
                            <td>@Html.TextBox("trabajador")</td>

                            <td style="font-weight:bold; padding-left:10px">
                            <td>@Html.Label("salario", "Tipo de salario::")</td>
                            <td>@Html.TextBox("salario")</td>

                            <td style="font-weight:bold; padding-left:10px">
                            <td>@Html.Label("jornada", "Semana o jornada reducida::")</td>
                            <td>@Html.TextBox("jornada")</td>
                        <tr>
                             <td rowspan="2" style="padding-left:15px">
                                <input type="submit" value="Generar IDSE" class="btn btn-success" style="width:80px; height:30px; font-size:10px;" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (isError != null)
    {
        if (isError.Equals(false))
        {
            <p><span class="label label-success">@message</span></p>
        }
        else
        {
            <p><span class="label label-danger">@message</span></p>
        }
    }
</div>
