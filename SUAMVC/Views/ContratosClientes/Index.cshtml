            @Html.DisplayFor(modelItem => item.firmo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.testigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actaConstitutivaEmpresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.poderRepresentanteLegal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ifeRepresentanteLegal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comprobanteDomicilio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicioVigencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaFinalVigencia)
        </td>
