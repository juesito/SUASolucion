@model SUADATOS.Municipio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

@section Menu {

    <div>Catálogo de Municipio<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-info" style="font-size:10px;">
        <div class="panel-heading">
            @Language.edit @Language.municipio
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group">
                @Html.Label(@Language.municipio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group" style="margin-top:40px;">
                @Html.Label(@Language.estado, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("estadoId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.estadoId, "", new { @class = "text-danger" })
                </div>
            </div>

              <div class="form-group"style="margin-top:80px;">
                @Html.Label(@Language.pais, "Pais", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("paisId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.paisId, "", new { @class = "text-danger" })
                </div>
            </div>       

           
            <div class="form-group" style="margin-top:120px;">
                <div class=" col-md-offset-2 col-md-10">
                <input type="submit" value="@Language.guardar" class="btn btn-primary" />
            </div>
            </div>
        </div>
        </div>
        }

        <div>
            @Html.ActionLink(@Language.regresar, "Index")
        </div>
