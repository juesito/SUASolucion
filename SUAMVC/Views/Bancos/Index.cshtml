@model IEnumerable<SUADATOS.Banco>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

@section menu {
    <div>@Language.catde @Language.bancos<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

<p>
    @Html.ActionLink(@Language.agregar + " " + Language.bancos, "Create", "Bancos", new { @class = "btn btn-success" })
</p>
    <table class="table table-striped tableSua">
        <tr>
            <th>
                @Html.DisplayName(@Language.descripcion)
            </th>
            <th>
                @Html.DisplayName(@Language.fechaAlta)
            </th>
            <th>
                @Html.DisplayName(@Language.usuarioAlta)
            </th>
            <th>
                @Html.DisplayName(Language.edit)
              
                @Html.DisplayName(Language.borrar)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaCreacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Bancos", new { id = item.id })" title="@Language.edit">
                        <img src="~/Content/Images/edit.png" alt="" style="border:none;" class="icon" />
                    </a>|
                    <a href="@Url.Action("Delete", "Bancos", new { id = item.id })" title="@Language.borrar">
                        <img src="~/Content/Images/delete.png" alt="" style="border:none;" class="icon" />
                    </a>
                </td>
            </tr>
        }

    </table>
