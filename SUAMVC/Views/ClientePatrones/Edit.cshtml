@model SUADATOS.ClientePatrone
@using SUADATOS
@using SUAMVC.Models
@using System.Text;

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    Usuario usuario = Session["UsuarioData"] as Usuario;
}
@section Menu {
    <div>Patrones por Cliente<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="panel panel-info">
        <div class="panel-heading">
            @Language.edit @Language.sdi
        </div>
        <div class="panel-body" style="font-size:10px;">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.Label(Language.cliente, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.clientesNSDrownList(usuario.Id, "clienteId")
                        @Html.ValidationMessageFor(model => model.clienteId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.patronesId, "patronId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("patronId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.patronesId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:80px;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Language.guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@Language.regresar, "Index")
</div>
