@model SUADATOS.Solicitud
@using SUADATOS
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Usuario usuario = Session["UsuarioData"] as Usuario;
    suaEntities db = new suaEntities();

    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}
@section Menu {
    <div>Catálogo de Solicitud Baja<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-info" style="font-size:10px;">
        <div class="panel-heading">
            @Language.edit @Language.solicitud
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <table style="font-size:10px;margin:0 auto; width:800px">
                <tr>
                    <td>@Html.Label(@Language.cliente, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td>
                        @Html.DropDownList("clienteId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.clienteId, "", new { @class = "text-danger" })
                    </td>
                    <td>@Html.Label(@Language.proyecto, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td>
                        @Html.DropDownList("proyectoId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.proyectoId, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label(@Language.residencia, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td>
                        @Html.DropDownList("plazaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.plazaId, "", new { @class = "text-danger" })
                    </td>
                    <td>@Html.LabelFor(model => model.fechaSolicitud, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td>
                        @Html.DisplayFor(model => model.fechaSolicitud, new { htmlAttributes = new { @class = "form-control myDate" } })
                        @Html.ValidationMessageFor(model => model.fechaSolicitud, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>@Html.Label(@Language.fechaBaja, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td>
                        @Html.EditorFor(model => model.fechaFinal, new { htmlAttributes = new { @class = "myDate"} })
                        @Html.ValidationMessageFor(model => model.fechaFinal, "", new { @class = "text-danger" })
                    </td>
                    <td>@Html.Label(@Language.motivoBaja, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td>
                        @Html.conceptosDrownList(usuario.Id, "BAJACON", "conceptoBaja")
                    </td>

                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.observaciones, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                    <td colspan="3">
                        @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", rows = 4 })
                        @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td colspan="3"></td>
                    <td style="text-align:right;"><input type="submit" value="@Language.agregar" class="btn btn-primary" /></td>
                </tr>
            </table>
            </div>
        </div>
   
        }

        <div>
            @Html.ActionLink(@Language.regresar, "Index")
        </div>
