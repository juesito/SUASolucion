@model SUADATOS.RepCostoSocial
@using SUADATOS
@using System.Text;

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
    var message = @TempData["viewMessage"];
    var isError = TempData["error"];
    Usuario usuario = Session["UsuarioData"] as Usuario;
}

@section Menu {
    <div>Reporte de Costo Social <img src="~/Content/Images/home.png" width="15" height="15" /></div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Selecciones los parámetros para el reporte:
    </div>
    <div class="panel-body">
        @using (@Html.BeginForm("LlenaReporte", "RepCostoSocial", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
        {
            @Html.Hidden("usuarioId", usuario.Id)
            <div class="marqueeFilter">
                <table style="float:left; margin-top:5px;display:inline-block;">
                    <tbody>
                        <tr>
                            <td>@Html.Label("Patron :")</td>
                            <td>@Html.patronesNoChangeKeysDrownList(usuario.Id)</td>
                        <tr>
                        <tr>
                            <td>@Html.Label("Cliente :")</td>
                            <td>@Html.patronesNoChangeKeysDrownList(usuario.Id)</td>
                        <tr>
                        <tr>
                            <td style="font-weight:bold; padding-top:10px">
                                Fecha Inicial:
                            </td>
                            <td style="padding-top:10px">
                                @Html.EditorFor(model => model.fechaAlta, new { htmlAttributes = new { @class = "myDate" } })
                            </td>
                            <td style="font-weight:bold; padding-top:10px">
                                Fecha Final:
                            </td>
                            <td style="padding-top:10px">
                                @Html.EditorFor(model => model.fechaBaja, new { htmlAttributes = new { @class = "myDate" } })
                            </td>
                            <td rowspan="2" style="padding-left:15px">
                                <a href="@Url.Action("LlenaReporte", "RepCostoSocial", new{ patronesId = @ViewBag.patId,
                                                                                            clientesId = @ViewBag.cteId,
                                                                                            fecIni = @ViewBag.fechaAlta,
                                                                                            fecFin = @ViewBag.fechaBaja
                                    })" style="text-align:right">
                                    <img src="~/Content/Images/xls.png" title="@Language.toExcel" alt="@Language.toExcel" style="border:none;" width="35" height="35" />
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (isError != null)
    {
        if (isError.Equals(false))
        {
            <p><span class="label label-success">@message</span></p>
        }
        else
        {
            <p><span class="label label-danger">@message</span></p>
        }
    }
</div>
