@model IEnumerable<SUADATOS.ContratosCliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

@section Menu {
    <div><img src="~/Content/Images/people-b.png" width="15" height="15" /> Catálogo de Contratos Cliente</div>
}

<p>
    @Html.ActionLink(@Language.agregar + " " + @Language.contCliente, "Create", "EsquemaPagos", new { @class = "btn btn-success" })
</p>
<table class="table table-striped tableSua">
    <tr>
        <th>
            @Html.DisplayName(@Language.descripcion)
        </th>
        <th>
            @Html.DisplayName(@Language.archivo1)
        </th>
        <th>
            @Html.DisplayName(@Language.archivo2)
        </th>
        <th>
            @Html.DisplayName(@Language.archivo3)
        </th>
        <th>
            @Html.DisplayName(@Language.fechaFirma)
        </th>
        <th>
            @Html.DisplayName(@Language.firmo)
        </th>
        <th>
            @Html.DisplayName(@Language.testigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actaConstitutivaEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.poderRepresentanteLegal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ifeRepresentanteLegal)
