@model SUADATOS.Modulo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Home/Index");
    }
}

@section Menu {
    <div><img src="~/Content/Images/people-b.png" width="15" height="15" />Catálogo de Módulos</div>
}




<div class="panel panel-info">
    <div class="panel-heading">
        ¿Desea borrar este registro?
    </div>
    <div class="panel-body" style="font-size:10px;">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName(@Language.desCorta)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.descripcionCorta)
            </dd>

            <dt>
                @Html.DisplayName(@Language.desLarga)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.descripcionLarga)
            </dd>

            <dt>
                @Html.DisplayName(@Language.fechaAlta)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fechaCreacion)
            </dd>

            <dt>
                @Html.DisplayName(@Language.estatus)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.estatus)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-group" style="margin-top:10px;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Language.borrar" class="btn btn-primary" />
        </div>
    </div>
        }
    </div>
    </div>

<div>
@Html.ActionLink(@Language.regresar, "Index")
</div>
