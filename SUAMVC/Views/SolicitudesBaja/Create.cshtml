@model SUADATOS.Solicitud
@using SUADATOS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Usuario usuario = Session["UsuarioData"] as Usuario;
    suaEntities db = new suaEntities();

    Cliente cliente = db.Clientes.Find(Model.clienteId);
    Proyecto proyecto = db.Proyectos.Find(Model.proyectoId);
}


@section Menu {
    <div>Catálogo de Solicitudes Baja<img src="~/Content/Images/people-b.png" width="15" height="15" /></div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.clienteId)
    @Html.HiddenFor(model => model.proyectoId)
    @Html.HiddenFor(model => model.fechaSolicitud)

    <div class="panel panel-info">
        <div class="panel-heading">
            Capturar Solicitud de Baja
        </div>
        <div class="panel-body" style="font-size:10px;">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table style="font-size:10px;margin:0 auto; width:800px">
                    <tr>
                        <td>@Html.Label(@Language.cliente, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.Label(cliente.descripcion)
                        </td>
                        <td>@Html.Label(@Language.proyecto, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.Label(proyecto.descripcion)
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.Label(@Language.plaza, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>
                            @Html.plazasDrownListNS(usuario.Id, "plazaId")
                            @Html.ValidationMessageFor(model => model.plazaId, "", new { @class = "text-danger" })
                        </td>
                        <td>@Html.Label(@Language.fechaBaja)</td>
                        <td>
                            @Html.EditorFor(model => model.fechaBaja, new { htmlAttributes = new { @class = "from-control myDate" } })
                            @Html.ValidationMessageFor(model => model.fechaBaja, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td>@Html.Label(@Language.motivoBaja)</td>
                        <td>
                            @Html.conceptosDrownList(usuario.Id, "BAJACON", "conceptoBaja")
                        </td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <td>@Html.LabelFor(model => model.observaciones, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td colspan="3">
                            @Html.TextAreaFor(model => model.observaciones, new { @class = "form-control", rows = 4 })
                            @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
                        </td>

                    </tr>
                    <tr>
                        <td colspan="3"></td>
                        <td style="text-align:right;"><input type="submit" value="@Language.agregar" class="btn btn-primary" /></td>
                    </tr>

                </table>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink(@Language.regresar, "Index")
</div>

